<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Manual.ManualRaceDetailActivity"
    android:padding="20dp">

    <TextView
        android:id="@+id/raceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginBottom="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alignment"
        android:layout_marginBottom="10dp"
        android:labelFor="@+id/raceAlignment"
        android:textSize="13pt"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/raceAlignment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age"
        android:layout_marginBottom="10dp"
        android:labelFor="@+id/raceAge"
        android:textSize="13pt"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/raceAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginBottom="10dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13pt"
        android:text="Size"
        android:layout_marginBottom="10dp"
        android:labelFor="@+id/raceSize"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/raceSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginBottom="10dp" />
    <TextView
        android:id="@+id/raceSizeDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Language"
        android:layout_marginBottom="10dp"
        android:labelFor="@+id/languageDesc"
        android:textSize="13pt"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/languageDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginBottom="10dp" />

</LinearLayout>